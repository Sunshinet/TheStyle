<div class="index-page-content-container container">
    <p class="post-location"><a href="#">Home</a><a>{{categorie}}</a></p>
   
    <div id="main-content">
      {{#each this}}
        <div class="post">
            <div class="post-home-image">
                <img class="post-image" src="" alt="picture">
            </div>
            <div class="post-image-content">
                <p class="post-category">
                   {{mainCategorie}}
                </p>
                <p class="post-date">
                    JAN
                </p>
                <p class="post-date">
                   24
                </p>
            </div>
            <a href="#/{{mainCategorie}}/{{categorie}}/{{id}}">
                <p class="post-title">
                  {{title}}
                </p>
            </a>
            <p class="post-author">
                posted by {{author}}
            </p>
            <hr class="post-separator" />
            <p class="post-summary">
                {{content}}
            </p>
            <div class="post-bottom">
            </div>
        </div>
        {{/each}}
    </div>
