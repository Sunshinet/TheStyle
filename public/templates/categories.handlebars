<div class="index-page-content-container">
      
      {{!-- <div class="post-location">{{this.1.categorie}}</div> --}}
    <div class="post-location"><a  href="#/">Home</a> &raquo; <a href="#/{{this.0.mainCategorie}}/{{this.0.categorie}}">{{this.0.categorie}}</a></div>
    <div id="main-content">
       {{#each this}}
      {{#if this.size}}
      <div class="post-big">
           <div class="post-image">
                <img src="https://upload.wikimedia.org/wikipedia/commons/b/bc/Darvasa_gas_crater_panorama_crop.jpg">
            </div>
            <div class="post-image-content">
                <div class="category-and-date">
                    <div class="post-category">
                    {{mainCategorie}}{{id}}
                    </div>
                    <div class="post-date">
                        JAN
                    </div>
                    <div class="post-date">
                    24
                    </div>
                </div>
            </div>
            
            <a href="#/{{mainCategorie}}/{{categorie}}/{{id}}">
                <h2 class="post-title">
                  {{title}}
                </h2>
            </a>
            <p class="post-author">
                posted by {{author}}
            </p>
            <hr class="post-separator" />
            <p class="post-summary">
                {{content}}
            </p>
            <div class="post-bottom">
            </div>
        </div>
        
        {{else}}
         <div class="post">
           <div class="post-image">
                <img src="https://i.pinimg.com/736x/e7/1d/71/e71d7116257ceef4d738f0bc88e377a3--minions-love-minions-despicable-me.jpg">
            </div>
            <div class="post-image-content">
                <div class="category-and-date">
                    <div class="post-category">
                    {{mainCategorie}}{{id}}
                    </div>
                    <div class="post-date">
                        JAN
                    </div>
                    <div class="post-date">
                    24
                    </div>
                </div>
            </div>
            
            <a href="#/{{mainCategorie}}/{{categorie}}/{{id}}">
                <h2 class="post-title">
                  {{title}}
                </h2>
            </a>
            <p class="post-author">
                posted by {{author}}
            </p>
            <hr class="post-separator" />
            <p class="post-summary">
                {{content}}
            </p>
            <div class="post-bottom">
            </div>
        </div>
        {{/if}}
        
        {{/each}}
      <div class="pagination-container">
        <p class="pagination_go_left"><a href="#">&laquo;</a></p>
        <p class="pagination">
            <span ng-repeat="page in vm.pages">
                <a href="#/" >1</a>
            </span>
        </p>
        <p class="pagination_go_right"><a href="#">&raquo;</a></p>
       </div>
    </div>
   
</div>

